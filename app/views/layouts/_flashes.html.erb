<% flash.each do |key, value| %>
      <% if key == :form_errors %>
      		<%= form_errors(value) %>
      <% elsif key == :form_success %>
      		<%= form_success(value) %>
      	<% elsif key == :form_alert %>
      		<%= form_alert(value) %>
      	<% elsif key == :form_warning %>
      		<%= form_warning(value) %>
      	<% end %>
<% end %>