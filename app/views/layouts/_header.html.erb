<%
title = yield(:title)
%>

<header class="navbar navbar-static-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      	<table id="KA_header_container">
      		<tr>
      			<td>
      				<table id="KA_header_inner_container">
      					<tr>
      						<td id="header_logo_container"><%= link_to image_tag("logo.png",width: '250'), '/', id: "logo" %></td>
      						<td id="header_content">Global EW Solutions by<br><span id="header_content_description">MC Countermeasures Inc.</span></td>
      					</tr>
      				</table>
      			</td>
      		</tr>
      		<tr>
	      		<td id="header_container_menu_links">
	        		<ul class="nav nav-tabs">
			          	<li <%= "class=active" if title.include?"Home" %>><%= link_to "Home", home_path %></li>
			          	<li <%= "class=active" if title.include?"Register" %>><%= link_to "Register", register_path %></li>
			          	<li <%= "class=active" if title.include?"Videos" %>><%= link_to "Videos", videos_path %></li>
			          	<li <%= "class=active" if title.include?"Results" %>><%= link_to "Results", results_path %></li>
			          	<li <%= "class=active" if title.include?"Presentations" %>><%= link_to "Presentations", presentations_path %></li>
			          	<li <%= "class=active" if title.include?"Papers" %>><%= link_to "Papers", papers_path %></li>
			          	<li <%= "class=active" if title.include?"Help" %>><%= link_to "Help", help_path %></li>
			          	<li <%= "class=active" if title.include?"About" %>><%= link_to "About", about_path %></li>
                  <% if signed_in? %>
			          	  <li <%= "class=active" if title.include?("Control Panel") %> style="float: right;"><%= link_to "Control Panel", current_user %></li>
                  <% else %>
                    <li <%= "class=active" if title=="Login" %> style="float: right;"><%= link_to "Login", signin_path %></li>
                  <% end %>
	        		</ul>
	        	</td>
	      	</tr>
      	</table>
    </div>
  </div>
</header>