<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
	  <%= render 'layouts/shim' %>
</head>

  <body>
  	<div id="wrap">
  		<!-- wrapper to allow footer to be pinned to bottom of page regardless of page length-->
  		<%= render 'layouts/header' %> 
  		
  		<div class="container" id="main_application_container">

        <%= render 'layouts/carousel' %>

        <%= render 'layouts/flashes' %>

        <div id="kirkontainer">
          <div id="kirkontainer_header"><%= yield(:title) %></div>
            <div id="kirkontainer_padding">
              <%= yield %>
            </div>
        </div>

        <%= debug(params) if Rails.env.development? %>
  		</div>
  		<div id="push"></div>
  	</div>
  	<div id="footer">
  		<%= render 'layouts/footer' %>
  	</div>
  </body>
</html>














